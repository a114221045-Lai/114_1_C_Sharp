using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Ending_Balance
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private TextBox GetStartingBalTextBox()
        {
            return startingBalTextBox;
        }

        private void calculateButton_Click(object sender, EventArgs e, TextBox startingBalTextBox)
        {
            // 每月利率常數（此處為 0.5% / 月）
            const decimal INTEREST_RATE = 0.005m; // 每月利率

            // 變數：balance 儲存目前結餘，months 儲存月份數
            decimal balance;
            int months;
            int count = 1;

            if (decimal.TryParse(startingBalTextBox, out balance) )
            {
                if (int.TryParse(monthsTextBox.Text, out months))
                {
                   while (count <= months)
                   {
                       // 計算利息並更新結餘
                       balance += balance * INTEREST_RATE;
                       // 在 ListBox 中顯示每月的結餘
                       detailListBox.Items.Add("第 " + count + "個月結餘: " + balance.ToString("c2"));
                       count++;
                    }
                }
                else
                {
                    MessageBox.Show("請輸入有效的月份數量。", "輸入錯誤");
                    monthsTextBox.Focus();
                }
            }
            else
            {
                MessageBox.Show("請輸入有效的起始餘額。", "輸入錯誤");
                startingBalTextBox.Focus();
            }
        }

        private void clearButton_Click(object sender, EventArgs e)
        {
            // Clear the TextBoxes, the endingBalanceLabel control,
            // and the ListBox.
            startingBalTextBox.Text = "";
            monthsTextBox.Text = "";
            endingBalanceLabel.Text = "";
            detailListBox.Items.Clear();

            // Reset the focus.
            startingBalTextBox.Focus();
        }

        private void exitButton_Click(object sender, EventArgs e)
        {
            // Close the form.
            this.Close();
        }
    }
}
